<%- include('../../partials/head.ejs')%>

<div class="container my-5">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-6 offset-md-3">
                <div class="mt-5" id="comment-holder">
                    <h4>
                        My Recent Comments
                    </h4>
                        <% if(comments.length === 0 ) { %>
                        <p class="text-center text-muted">
                            There is no comment
                        </p>
                        <% } else {
                            for ( let comment of comments.reverse() )  {%>
                        <div class="media-border">
                            <img src="<%= comment.user.profile_pic %>" alt="<%= comment.user.username %>"
                                class="rounded-circle mx-3 my-1" style="width: 40px">
                            <div class="media-body mx-5">
                                <p class="text-muted">
                                        On posted <strong> <%= comment.post.title %></strong> By <a href="/author/<%= comment.user._id%>">
                                            <%= comment.user.username %>
                                        </a> , <%= moment( comment.post.createdAt ) %>
                                </p>
                                <p><%= comment.body %>
                                    <small>
                                        (<%= moment( comment.createdAt ) %>)
                                    </small>
                                </p>

                                <div name="replies">
                                    <%  if( comment.replies.length > 0 ) {
                                                for( let replay of comment.replies ) { %>
                                    <div class="media mt-3">
                                        <img src=" <%= replay.user.profile_pic %>"
                                            class="align-selt-start mr-3 rounded-circle" style="width: 40px">
                                        <div class="media-body">
                                            <p> <%= replay.body %></p>
                                        </div>
                                    </div>
                                    <% }
                                            } %>
                                </div>
                                <div class="my-3">
                                    <input type="text" placeholder="Please Enter to Replay" class="form-control"
                                        name="replay" data-comment="<%= comment._id %>">
                                </div>
                            </div>
                        </div>
                        <%} }%>
                    </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs')%>