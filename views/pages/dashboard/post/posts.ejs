<%- include('../../../partials/head.ejs') %>

<div class="container-fluid my-container my-5">
    <div class="row">
        <div class="col-md-2">
                <%- include('../../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-8 offset-md-2 my-5">
            <h5>Lists of your created posts</h5>
            <% if(posts.length === 0 ) { %>
            <div class="text-center text-muted">
                <p>There is no post abailable right now</p>
                <a href="/post/create" class="btn btn-primary btn-sm">Create New Post</a>
            </div>
            <%} else { %>
            <% for(let post of posts ) {%>
            <div class="card col-sm-3 mb-3">
                <% if(post.thumbnail) {%>
                <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                <% }%>
                <div class="card-body">
                    <a href="/post/update/<%= post._id%>" style="color : #222">
                        <h5><%= post.title %></h5>
                    </a>
                </div>
            </div>
            <%}%>
            <%}%>
        </div>
    </div>
</div>
<%- include('../../../partials/footer.ejs') %>